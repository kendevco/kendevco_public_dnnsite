{
  "fields": {
    "ModuleTitle": {
      "type": "text"
    },
    "Template_Settings": {
      "type": "object",
      "fields": {
        "Template_Columns": {
          "type": "select",
          "sort": false,
          "optionLabels": [
            "2 Column Layout",
            "3 Column Layout",
            "4 Column Layout"
          ]
        },
        "Template_Heading": {
          "type": "text"
        },
        "Template_Intro": {
          "type": "text"
        }
      }
    },
    "Category_List": {
      "type": "table",
      "items": {
        "fields": {
          "Filter_Category": {
            "type": "text"
          }
        }
      }
    },
    "Category_Settings": {
      "type": "object",
      "fields": {
        "Disable_View_All": {
          "type": "checkbox"
        }
      }
    },
    "Listing": {
      "type": "accordion",
      "items": {
        "fields": {
          "Image_Or_Video": {
            "type": "radio",
            "sort": false,
            "optionLabels": [
              "Image",
              "Video"
            ],
            "vertical": false
          },
          "Image": {
            "type": "image",
            "uploadfolder": "gallery-content",
            "typeahead": {
              "Folder": "gallery-content"
            },
            "dependencies": {
              "Image_Or_Video": [
                "Image",
                " Video"
              ]
            }
          },
          "Image_Alt": {
            "type": "text",
            "helper": "This is for SEO purposes",
            "dependencies": {
              "Image_Or_Video": [
                "Image",
                " Video"
              ]
            }
          },
          "Video_Type": {
            "type": "radio",
            "sort": false,
            "optionLabels": [
              "Embed Code",
              "Custom Upload"
            ],
            "vertical": false,
            "dependencies": {
              "Image_Or_Video": [
                "Video",
                " Image"
              ]
            }
          },
          "Video_Upload": {
            "type": "file",
            "uploadfolder": "gallery-content",
            "typeahead": {
              "Folder": "gallery-content"
            },
            "dependencies": {
              "Video_Type": [
                "Upload",
                " Embed"
              ]
            }
          },
          "Video_Upload_Title": {
            "type": "text",
            "dependencies": {
              "Video_Type": [
                "Upload",
                " Embed"
              ]
            }
          },
          "Video_Embed": {
            "type": "text",
            "dependencies": {
              "Video_Type": [
                "Embed",
                " Upload"
              ]
            }
          },
          "Video_Embed_Link": {
            "type": "text",
            "helper": "This is the link that is generated by click the \"share\" button on youtube, or the link at the top of the popup after clicking \"share\" in Vimeo",
            "dependencies": {
              "Video_Type": [
                "Embed",
                " Upload"
              ]
            }
          },
          "Video_Embed_Title": {
            "type": "text",
            "dependencies": {
              "Video_Type": [
                "Embed",
                " Video"
              ]
            }
          },
          "Media_Title": {
            "type": "text"
          },
          "Media_Caption": {
            "type": "textarea"
          },
          "Include_Caption": {
            "type": "checkbox"
          },
          "Include_Caption_Lightbox": {
            "type": "checkbox"
          },
          "Category_Select": {
            "type": "array",
            "helper": "Must match a Category in the Categories list above the Gallery",
            "items": {
              "fields": {
                "Category": {
                  "type": "text"
                }
              }
            }
          }
        }
      }
    }
  }
}