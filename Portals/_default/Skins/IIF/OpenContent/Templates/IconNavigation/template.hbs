<div class="icon-navigation{{#if Remove_Limit}} icon-navigation__unlimited{{/if}}">
    <ul>
        {{#each Nav_Item}}
            <li>
                <a href="{{Link}}"{{#if Link_Target}} target="_blank" rel="noopener noreferrer"{{/if}} title="{{#if Link_Title}}{{Link_Title}}{{else}}Navigation Link{{/if}}">
                	{{#if Icon}}
                	<div class="nav-icon">
                		<img src="{{Icon}}" alt="{{#if Icon_Alt}}{{Icon_Alt}}{{else}}Navigation Icon{{/if}}" width="100" height="100" />
                	</div>
                	{{/if}}
                	<span>{{Text}}</span>
                </a>
            </li>
        {{/each}}
    </ul>
</div>
