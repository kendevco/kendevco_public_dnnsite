[
  {
    "Title": "Date Picker",
    "Name": "date-flatpickr",
    "Categories": [
      "Date and Time"
    ],
    "TypeStr": "avt.ActionForm.Core.Input.DatePicker,avt.ActionForm.Core",
    "JsIncludes": [
      "[commonUrl]/static/angular15/datetime-flatpickr/bundle.js",
      "[commonUrl]/static/angular15/datetime-flatpickr/flatpickr.min.js",
      "[commonUrl]/static/angular15/datetime-flatpickr/datetime-flatpickr.js"
    ],
    "CssIncludes": [
      "[commonUrl]/static/angular15/datetime-flatpickr/flatpickr.min.css",
      "[commonUrl]/static/angular15/datetime-flatpickr/datetime-flatpickr.css"
    ],
    "HelpText": {
      "default": "Date picker that uses flatpickr javascript library. <br />Generates the following tokens: [{{item.BoundName}}], [{{item.BoundName}}:ISO], [{{item.BoundName}}:Utc], [{{item.BoundName}}:UtcFormatted], [{{item.BoundName}}:Day], [{{item.BoundName}}:Month], [{{item.BoundName}}:MonthName], [{{item.BoundName}}:Year], [{{item.BoundName}}:DayOfYear], [{{item.BoundName}}:DayOfWeek] <br />When the <b>range mode</b> advanced option is used, the expected format will be as follows: <code>&lt;start-date&gt; to &lt;end-date&gt;</code>. In this case, the tokens will contain the values in the new specified format, with each date value respecting the requested token. Additionally to the normal tokens, a set of new tokens are generated for the start date and the end date and will contain the 'Start' and 'End' prefix, so that they can be retrieved individually too. (e.g. for the Iso value you will use the '[{{item.BoundName}}:StartIso]' and '[{{item.BoundName}}:EndIso]' tokens)"
    },
    "Settings": {
      "TemplateFile": "controls/date-flatpickr.xsl"
    },
    "Parameters": [
      {
        "Id": "Value",
        "Type": "Text",
        "Title": {
          "default": "Initial Value"
        },
        "HelpText": {
          "default": "Provide a date for preload. It can be in any format that can be parsed in the current language. Supports Tokens."
        },
        "IsPublic": false
      },
      {
        "Id": "ClientFormat",
        "Type": "Select",
        "Title": {
          "default": "Format"
        },
        "HelpText": {
          "default": "The format that will be displayed to the user. For custom formats, check <a target='_blank' href='https://docs.microsoft.com/en-us/dotnet/standard/base-types/custom-date-and-time-format-strings'>Date/DateTime picker format strings</a>. Supports Tokens."
        },
        
        "DefaultValue": {
          "default": "MM/dd/yyyy"
        },
        "Settings": {
          "Items": {
            "MM/dd/yyyy": {
              "default": "Short Date (e.g. 6/15/2009)"
            },
            "dddd, MMMM dd, yyyy": {
              "default": "Long Date (e.g. Monday, June 15, 2009)"
            },
            "MMMM dd": {
              "default": "Month/day (e.g. June 15)"
            },
            "MMMM, yyyy": {
              "default": "Year month (e.g. June, 2009)"
            },
            "yyyy-MM-dd": {
              "default": "ISO (e.g. 2009-06-15)"
            }
          },
          "SupportsExpressions": "true"
        },
        "IsPublic": false
      },
      {
        "Id": "AllowInput",
        "Type": "Boolean",
        "Title": {
          "default": "Allow Input"
        },
        "HelpText": {
          "default": "Allows users to manually input time in the textbox."
        },
        "DefaultValue": {
          "default": "false"
        },
        "IsPublic": true
      },
      {
        "Id": "FirstDayOfWeek",
        "Type": "Select",
        "Title": {
          "default": "First Day of the Week"
        },
        "DefaultValue": {
          "default": "sunday"
        },
        "Settings": {
          "Items": {
            "sunday": {
              "default": "Sunday"
            },
            "monday": {
              "default": "Monday"
            }
          }
        },
        "IsPublic": true
      },
      {
        "Id": "DisableWeekends",
        "Title": {
          "default": "Disable Weekends"
        },
        "Type": "Boolean",
        "DefaultValue": {
          "default": "false"
        },
        "HelpText": {
          "default": "Check this to disable saturdays and sundays."
        },
        "IsPublic": true
      },
      {
        "Id": "Inline",
        "Title": {
          "default": "Inline"
        },
        "Type": "Boolean",
        "DefaultValue": {
          "default": "false"
        },
        "HelpText": {
          "default": "Calendar is visible without clicking inside the field."
        },
        "IsPublic": true
      },
      {
        "Id": "DisableFutureOrPast",
        "Type": "Select",
        "Title": {
          "default": "Disable Dates"
        },
        "DefaultValue": {
          "default": "none"
        },
        "Settings": {
          "Items": {
            "none": {
              "default": "None"
            },
            "past": {
              "default": "In The Past"
            },
            "future": {
              "default": "In The Future"
            }
          }
        },
        "HelpText": {
          "default": "Disable every date in the future or every date in the past."
        },
        "IsPublic": true
      },
      {
        "Id": "MinDate",
        "Type": "Text",
        "Title": {
          "default": "Minimum Date"
        },
        "HelpText": {
          "default": "The minimum date that a user can start picking from (inclusive). Supports Tokens."
        },
        "IsPublic": false,
        "Settings": {
          "ShowCondition": "itemParameters['DisableFutureOrPast'].Value != 'past'"
        }
      },
      {
        "Id": "MaxDate",
        "Type": "Text",
        "Title": {
          "default": "Maximum Date"
        },
        "HelpText": {
          "default": "The maximum date that a user can pick to (inclusive). Supports Tokens."
        },
        "IsPublic": false,
        "Settings": {
          "ShowCondition": "itemParameters['DisableFutureOrPast'].Value != 'future'"
        }
      },
      {
        "Id": "FlatpickrOptionsOverride",
        "Type": "Code",
        "Title": {
          "default": "Flatpickr Options Override (javascript object)"
        },
        "HelpText": {
          "default": "Input a valid javascript object that will override the options of the flatpickr library the field is using behind the scenes. <a href='https://flatpickr.js.org/examples/' target='_blank'>Flatpickr options</a> <br/> Example: {weekNumbers: true} <br/> Supports Tokens."
        },
        "Settings": {
          "CodeMirrorMode": "javascript"
        },
        "IsPublic": true
      },
      {
        "Id": "SaveToReport",
        "Title": {
          "default": "Save to Report"
        },
        "Type": "Boolean",
        "DefaultValue": {
          "default": "false"
        },
        "HelpText": {
          "default": "The field will be saved in Reports. If Enable Reports from General settings is not checked, this will be ignored."
        }
      }
    ]
  },
